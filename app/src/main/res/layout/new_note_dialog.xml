<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/new_note_dialog">

    <TextView
        android:id="@+id/create_note"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_margin="16dp"
        android:drawableLeft="@drawable/ic_edit"
        android:onClick="createNote"
        android:text="    Create Note"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_margin="16dp"
        android:drawableLeft="@drawable/ic_add_a_photo"
        android:onClick="photo"
        android:text="    Photo"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/reminder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_margin="16dp"
        android:drawableLeft="@drawable/ic_access_alarm"
        android:onClick="reminder"
        android:text="    Reminder"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/recording"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_margin="16dp"
        android:drawableLeft="@drawable/ic_ic_mic_black_24px"
        android:onClick="recording"
        android:text="    Recording"
        android:textColor="#000"
        android:textSize="17sp" />
</LinearLayout>